{
  "name": "app",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.3.0",
    "esbuild": "^0.25.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "tailwindcss": "^3.4.18"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:watch": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --watch=forever",
    "build:css": "postcss ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css",
    "build:css:watch": "postcss ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch"
  },

  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.13",
    "chart.js": "^4.4.9",
    "material-icons": "^1.13.14"
  }
}
