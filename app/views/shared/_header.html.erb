<header class="fixed w-full bg-violet-500 text-white px-4 sm:px-6 py-3 flex items-center justify-between z-30 h-16">
  <%= link_to "Fitgraph", (user_signed_in? ? authenticated_root_path : unauthenticated_root_path),
      class: "text-2xl sm:text-3xl font-extrabold" %>

  <div class="relative" data-controller="dropdown">
    <!-- トグルボタン -->
    <button
      data-action="click->dropdown#toggle"
      class="flex items-center space-x-1 focus:outline-none">
      <span>メニュー</span>
      <i class="material-icons md-24">arrow_drop_down</i>
    </button>

    <!-- メニュー本体 -->
    <div
      data-dropdown-target="menu"
      class="hidden absolute right-0 mt-2 w-40 text-right bg-white text-gray-800 rounded-lg shadow-lg
            ring-1 ring-black ring-opacity-5 overflow-hidden">
      <% if user_signed_in? %>
        <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete },
              class: "block px-4 py-2 hover:bg-gray-100" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path,
              class: "block px-4 py-2 hover:bg-gray-100" %>
        <%= link_to "新規登録", new_user_registration_path,
              class: "block px-4 py-2 hover:bg-gray-100" %>
      <% end %>
    </div>
  </div>
</header>

