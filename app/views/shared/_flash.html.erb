<% [:success, :danger, :notice, :warning].each do |type| %>
  <% if flash[type] %>
    <div class="
      px-4 py-3 rounded mb-4 flex items-center justify-between
      <%=
        case type
        when :success then 'bg-green-100 text-green-800 border border-green-300'
        when :danger  then 'bg-red-100 text-red-800 border border-red-300'
        when :warning then 'bg-yellow-100 text-yellow-800 border border-yellow-300'
        else 'bg-blue-100 text-blue-800 border border-blue-300'
        end
      %>">
      <span><%= flash[type] %></span>
      <button type="button" class="ml-4 text-2xl font-bold leading-none" onclick="this.parentElement.style.display='none';">&times;</button>
    </div>
  <% end %>
<% end %> 