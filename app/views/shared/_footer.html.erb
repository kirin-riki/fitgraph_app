<footer class="fixed bottom-0 left-0 w-full z-40 bg-violet-500 text-white">
  <nav class="grid grid-cols-4 divide-x divide-violet-400/60 text-center select-none">

    <!-- ─── 1. 入力 ─── -->
    <%= link_to authenticated_root_path,
        class: "flex flex-col items-center justify-center py-2 hover:bg-violet-600 transition" do %>
      <span class="material-icons md-36 mb-1">event_note</span>
      <span class="text-xs font-medium">入力</span>
    <% end %>

    <!-- ─── 2. 経過 ─── -->
    <%= link_to progress_path,
        class: "flex flex-col items-center justify-center py-2 hover:bg-violet-600 transition",
        data: { turbo: false } do %>
      <%= image_tag "graph_record.png", class: "w-9 h-9 mb-1" %>
      <span class="text-xs font-medium">経過</span>
    <% end %>

    <!-- ─── 3. 動画 ─── -->
    <%= link_to recommended_videos_path,
        class: "flex flex-col items-center justify-center py-2 hover:bg-violet-600 transition" do %>
      <span class="material-icons md-36 mb-1">video_library</span>
      <span class="text-xs font-medium">動画</span>
    <% end %>

    <!-- ─── 4. マイページ ─── -->
    <%= link_to profile_path,
        class: "flex flex-col items-center justify-center py-2 hover:bg-violet-600 transition" do %>
      <span class="material-icons md-36 mb-1">person</span>
      <span class="text-xs font-medium">マイページ</span>
    <% end %>

  </nav>
</footer>