<% content_for :no_main_padding, true %>
<div class="w-full mx-auto min-h-screen bg-gradient-to-b from-indigo-400 via-violet-500 to-purple-700 px-4 relative">
  <div class="absolute inset-0 flex items-center justify-center">
    <section
      class="w-full max-w-md mx-auto flex flex-col items-center justify-center py-12 px-6 sm:px-10 bg-white/10 backdrop-blur-sm rounded-xl shadow-xl text-white transform scale-100 md:scale-125 transition-transform duration-300">
      <%= image_tag 'logo_camera.png', class: 'w-41 h-32 mb-1' %>
      <h1 class="text-4xl font-extrabold mb-6 tracking-wide">
        Fitgraph
      </h1>
      <!-- ログイン -->
      <%= link_to 'ログイン', new_user_session_path, class:
          "w-full max-w-xs text-center bg-white text-violet-600 font-semibold rounded-full py-3 mb-4 hover:bg-gray-100 transition" %>
      <!-- 新規登録 -->
      <%= link_to '新規登録', new_user_registration_path, class:
          "w-full max-w-xs text-center border border-white font-semibold rounded-full py-3 mb-10 hover:bg-white/10 transition" %>
    </section>
  </div>
</div>
