<main class="w-full mx-auto min-h-screen flex flex-col items-center bg-gray-50 py-5">
  <section class="w-full max-w-xl bg-white rounded-xl shadow-lg px-4 sm:px-6 lg:px-8 py-4 sm:py-8 lg:py-10 mx-4 
                  scale-100 lg:scale-125 origin-top transition-transform duration-300">
    <h2 class="text-lg sm:text-xl lg:text-2xl font-bold text-center mb-4 sm:mb-6 lg:mb-8 text-violet-600">
      マイページ
    </h2>

    <!-- 編集ボタン（左寄せ・幅50%） -->
    <%= link_to "編集", edit_profile_path,
        class: "block w-1/4 mb-3 bg-violet-600 hover:bg-violet-700
                text-white font-semibold text-center py-1 rounded-full" %>

    <!-- ラベル1行 + 値1行 (下線のみ) -->
    <div class="space-y-2 sm:space-y-3 lg:space-y-4">
      <% fields = [
        ["ユーザー名",             @user.name.presence || "—"],
        ["メールアドレス",     @user.email],
        ["身長（cm）",         @profile.height || "—"],
        ["目標体重（kg）",     (@profile.target_weight ? @profile.target_weight.to_i : "—")],
        ["生物学的性別",       @profile.gender || "—"],
        ["トレーニング強度",   @profile.training_intensity || "—"]
      ] %>

      <% fields.each do |label, value| %>
        <!-- ラベル -->
        <p class="text-sm font-semibold text-violet-600 mb-1"><%= label %></p>

        <!-- 値（下線スタイルのみ） -->
        <p class="w-full border-b border-violet-300 pb-1 text-gray-900">
          <%= value %>
        </p>
      <% end %>
    </div>
  </section>
</main>
