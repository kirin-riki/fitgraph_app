<% content_for :no_main_padding, true %>
<div class="w-full absolute inset-0 flex items-center justify-center">
  <section class="w-full max-w-xl bg-white rounded-xl shadow-lg px-4 sm:px-6 lg:px-8 py-4 sm:py-8 lg:py-10 mx-4
                  scale-100 md:scale-110 transition-transform  duration-300">
    <h2 class="text-lg sm:text-xl lg:text-2xl font-bold text-center mb-4 sm:mb-6 lg:mb-8 text-violet-600">
      パスワードをお忘れの方
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= devise_error_messages! %>
      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm mb-1 font-bold text-violet-600" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
            class: "mt-1 block w-full rounded-lg border border-violet-300 bg-white px-3 py-2 focus:border-violet-500 focus:ring focus:ring-violet-200 focus:ring-opacity-50" %>
      </div>

      <div class="pt-4">
        <%= f.submit "送信",
            class: "w-full bg-violet-600 text-white font-semibold py-3 rounded-full hover:bg-violet-700 transition-colors" %>
      </div>
    <% end %>

    <div class="text-center mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </section>
</div>
