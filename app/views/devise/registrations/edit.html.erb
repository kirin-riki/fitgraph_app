<div class="w-full mx-auto min-h-screen flex items-center justify-center bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md transform scale-100 md:scale-125 transition-transform duration-300">
    <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
      <h2 class="mt-6 text-center text-2xl font-extrabold text-violet-600">
        アカウント編集
      </h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <%= f.label :email, 'メールアドレス', class: 'block text-sm font-medium text-violet-600' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: 'mt-1 block w-full rounded-lg border border-violet-300 bg-white px-3 py-2 focus:border-violet-500 focus:ring focus:ring-violet-200 focus:ring-opacity-50' %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-500 mb-2">現在確認待ち: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div>
          <%= f.label :password, '新しいパスワード(空欄で変更なし)', class: 'block text-sm font-medium text-violet-600' %>
          <%= f.password_field :password, autocomplete: "new-password",
                class: 'mt-1 block w-full rounded-lg border border-violet-300 bg-white px-3 py-2 focus:border-violet-500 focus:ring focus:ring-violet-200 focus:ring-opacity-50' %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-400"><%= @minimum_password_length %>文字以上</em>
          <% end %>
        </div>
        <div>
          <%= f.label :password_confirmation, 'パスワード確認', class: 'block text-sm font-medium text-violet-600' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: 'mt-1 block w-full rounded-lg border border-violet-300 bg-white px-3 py-2 focus:border-violet-500 focus:ring focus:ring-violet-200 focus:ring-opacity-50' %>
        </div>
        <div>
          <%= f.label :current_password, '現在のパスワード(変更時必須)', class: 'block text-sm font-medium text-violet-600' %>
          <%= f.password_field :current_password, autocomplete: "current-password",
                class: 'mt-1 block w-full rounded-lg border border-violet-300 bg-white px-3 py-2 focus:border-violet-500 focus:ring focus:ring-violet-200 focus:ring-opacity-50' %>
        </div>
        <div>
          <%= f.submit "更新", class: 'w-full flex justify-center py-3 px-4 border border-transparent rounded-full shadow-sm text-sm font-medium text-white bg-violet-500 hover:bg-violet-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500' %>
        </div>
      <% end %>
      <div class="mt-6 text-center">
        <h3 class="text-base font-semibold text-gray-700 mb-2">アカウント削除</h3>
        <div>
          <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: 'text-sm text-red-600 hover:underline' %>
        </div>
        <div class="mt-2">
          <%= link_to "戻る", root_path, class: 'text-sm text-violet-600 hover:underline' %>
        </div>
      </div>
    </div>
  </div>
</div>
