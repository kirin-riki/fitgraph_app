<!-- app/views/devise/registrations/new.html.erb -->
<div class="w-full mx-auto min-h-screen flex items-center justify-center
         bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
      <h2 class="mt-6 text-center text-2xl font-extrabold text-violet-600">
        新規登録
      </h2>
      <%= form_for(resource, as: resource_name,
                   url: registration_path(resource_name),
                   html: { class: "space-y-6" }) do |f| %>

        <div>
          <%= f.label :name, '氏名',
                class: 'block text-sm font-medium text-violet-600' %>
          <%= f.text_field :name,
                autofocus: true,
                required: true,
                class: 'mt-1 block w-full rounded-lg border border-violet-300 bg-white px-3 py-2 focus:border-violet-500 focus:ring focus:ring-violet-200 focus:ring-opacity-50' %>
        </div>

        <div>
          <%= f.label :email, 'メールアドレス',
                class: 'block text-sm font-medium text-violet-600' %>
          <%= f.email_field :email,
                required: true,
                class: 'mt-1 block w-full rounded-lg border border-violet-300 bg-white px-3 py-2 focus:border-violet-500 focus:ring focus:ring-violet-200 focus:ring-opacity-50' %>
        </div>

        <div>
          <%= f.label :password, 'パスワード',
                class: 'block text-sm font-medium text-violet-600' %>
          <%= f.password_field :password,
                required: true,
                class: 'mt-1 block w-full rounded-lg border border-violet-300 bg-white px-3 py-2 focus:border-violet-500 focus:ring focus:ring-violet-200 focus:ring-opacity-50' %>
        </div>

        <div>
          <%= f.label :password_confirmation, 'パスワード確認',
                class: 'block text-sm font-medium text-violet-600' %>
          <%= f.password_field :password_confirmation,
                required: true,
                class: 'mt-1 block w-full rounded-lg border border-violet-300 bg-white px-3 py-2 focus:border-violet-500 focus:ring focus:ring-violet-200 focus:ring-opacity-50' %>
        </div>

        <div>
          <%= f.submit '登録',
                class: 'w-full flex justify-center py-3 px-4 border border-transparent rounded-full
                       shadow-sm text-sm font-medium text-white bg-violet-500 hover:bg-violet-600
                       focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500' %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to 'ログインはこちら', new_user_session_path,
              class: 'text-sm text-violet-600 hover:underline' %>
      </div>
    </div>
  </div>
</div>
