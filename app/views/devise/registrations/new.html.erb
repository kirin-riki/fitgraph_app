<% content_for :no_main_padding, true %>
<div class="w-full min-h-screen bg-gradient-to-b from-indigo-400 via-violet-500 to-purple-700 px-4 relative">
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="w-full max-w-md mx-auto transform scale-100 md:scale-125 transition-transform duration-300">
      <div class="bg-white/10 backdrop-blur-sm py-8 px-6 sm:px-10 rounded-xl shadow-lg">
        <div class="flex flex-col items-center">
          <%= image_tag 'logo_camera.png', class: 'w-41 h-32 mb-1' %>
          <h1 class="text-white text-4xl font-extrabold mb-6 tracking-wide">
            Fitgraph
          </h1>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <%= devise_error_messages! %>
          <div>
            <%= f.label :name, "ユーザー名", class: "block text-sm font-medium text-white" %>
            <%= f.text_field :name, autofocus: true, required: true, placeholder: "ユーザー名を入力してください", class: "mt-1 block w-full rounded-full bg-white bg-opacity-30 px-4 py-2 placeholder-white placeholder-opacity-70 text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50" %>
          </div>
          <div>
            <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-white" %>
            <%= f.email_field :email, autofocus: true, required: true, placeholder: "example@example.com", class: "mt-1 block w-full rounded-full bg-white bg-opacity-30 px-4 py-2 placeholder-white placeholder-opacity-70 text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50" %>
          </div>
          <div>
            <%= f.label :password, "パスワード", class: "block text-sm font-medium text-white" %>
            <%= f.password_field :password, required: true, placeholder: "6文字以上", class: "mt-1 block w-full rounded-full bg-white bg-opacity-30 px-4 py-2 placeholder-white placeholder-opacity-70 text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50" %>
          </div>
          <div>
            <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-sm font-medium text-white" %>
            <%= f.password_field :password_confirmation, required: true, placeholder: "もう一度入力", class: "mt-1 block w-full rounded-full bg-white bg-opacity-30 px-4 py-2 placeholder-white placeholder-opacity-70 text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50" %>
          </div>
          <div>
            <%= f.submit "新規登録", class: "w-full bg-white text-violet-800 font-medium rounded-full py-2 hover:bg-opacity-90 transition" %>
          </div>
        <% end %>
        <div class="mt-4 text-center">
          <%= link_to "すでにアカウントをお持ちの方はこちら", new_user_session_path, class: "block text-sm text-white underline hover:text-violet-200" %>
        </div>
      </div>
    </div>
  </div>
</div>
