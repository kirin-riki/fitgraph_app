<!-- app/views/devise/sessions/new.html.erb -->
<div class="w-full min-h-screen flex items-center justify-center
           bg-gradient-to-b from-indigo-400 via-violet-500 to-purple-700 px-4">
  <!-- カードと同じ max-w-sm + mx-auto -->
  <div class="w-full max-w-md mx-auto">
    <div class="bg-white/10 backdrop-blur-sm
                py-8 px-6 sm:px-10 rounded-xl shadow-lg">

      <!-- ロゴとタイトル -->
      <div class="flex flex-col items-center">
        <%= image_tag 'logo_camera.png', class: 'w-41 h-32 mb-1' %>
        <h1 class="text-white text-4xl font-extrabold mb-6 tracking-wide">
          Fitgraph
        </h1>
      </div>

      <!-- ログインフォーム -->
      <%= form_for(resource, as: resource_name,
                   url: session_path(resource_name),
                   html: { class: "space-y-4" }) do |f| %>
        <%= devise_error_messages! %>

        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-white" %>
          <%= f.email_field :email,
                autofocus: true, required: true,
                placeholder: "example@example.com",
                class: "mt-1 block w-full rounded-full bg-white bg-opacity-30
                       px-4 py-2 placeholder-white placeholder-opacity-70
                       text-white focus:outline-none focus:ring-2 focus:ring-white
                       focus:ring-opacity-50" %>
        </div>

        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-white" %>
          <%= f.password_field :password,
                required: true, placeholder: "••••••••",
                class: "mt-1 block w-full rounded-full bg-white bg-opacity-30
                       px-4 py-2 placeholder-white placeholder-opacity-70
                       text-white focus:outline-none focus:ring-2 focus:ring-white
                       focus:ring-opacity-50" %>
        </div>

        <div>
          <%= f.submit "ログイン",
                class: "w-full bg-white text-violet-800 font-medium
                       rounded-full py-2 hover:bg-opacity-90 transition" %>
        </div>
      <% end %>

      <!-- フッタリンク -->
      <div class="mt-4 text-center space-y-2">

        <%= link_to "新規登録はこちら", new_user_registration_path,
              class: "block text-sm text-white underline hover:text-violet-200" %>
      </div>

    </div>
  </div>
</div>
