<main class="w-full mx-auto min-h-[calc(100vh-60px)] flex flex-col items-center bg-gray-50 py-5 pt-[60px] pb-24">
  <div class="w-full text-left px-4 mb-2">
    <h3 class="mb-4 text-sm text-violet-600">入力</h3>
  </div>
  <div class="flex flex-col items-center">
  </div>
  <section class="w-full max-w-xl lg:max-w-2xl bg-white rounded-xl shadow-lg px-4 sm:px-6 lg:px-8 py-4 sm:py-8 lg:py-10 mx-4 mb-12 scale-100 lg:scale-110 origin-top transition-transform duration-300">
    <h2 class="text-lg sm:text-xl lg:text-2xl font-bold text-center mb-4 sm:mb-6 lg:mb-8 text-violet-600">
      入力する日を選択
    </h2>

    <%= turbo_frame_tag "calendar" do %>
      <%= month_calendar(events: @body_records, attribute: :recorded_at) do |date, body_records| %>
        <%= link_to date.day, top_body_records_path(start_date: date) %>
      <% end %>
    <% end %>
  </section>
</main>